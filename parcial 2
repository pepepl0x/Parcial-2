#include <iostream>
#include <string>

using namespace std;

int arre[8]={1,0,0,0,0,1,0,0};
int resul[8];


void parcial (int arre[8], int nd);

int main()


{
    
    parcial (arre, 1);

    return 0;
}


void parcial (int arre[8], int nd)

{
   
    
    
    for (int i=0;i<nd;i++)
    
    {
        
        for (int k=0;k<8;k++)
        
        {
            if (arre[k+1]==arre[k-1])
                    
                    {
                        resul[k]=0;
                        
                    }
                    
            else 
                    
                    {
                        
                        resul[k]=1;
                        
                    }
                        
            
            
            if (k==0)
            
            {
                if (arre[1]==0)
                
                {
                    resul[0]=0;
                    
                }
                
                else 
                
                {
                    resul[0]=1;
                        
                    
                }
                
                
                
            }
            
            else
            
            {
                if (k==7)
            
                 {
                     if (arre[6]==0)
                
                      {
                          
                       resul[7]=0;
                    
                
                       }
                
                else 
                
                {
                    
                        resul[7]=1;
                        
                        
                    
                }
                
                
                
                }
                
                
                
                
                
            }
            
            
            
            
           
        }
        
        for (int l=0;l<8;l++)
   
        {
            cout<<resul[l]<<"  ";
       
         }
    
        cout<<"Salidas en el dÃ­a # "<<i+1<<endl;
        
        
        for (int p=0;p<8;p++)
        
        {
            
            arre[p]=resul[p];
            
            
        }
        
        
    }
    
}
